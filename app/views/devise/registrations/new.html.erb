<%= foundation_devise_error_messages! %>
<div class="row">
  <div class="medium-6 medium-centered columns">
    <div class="login-box">
      <div class="row">
        <div class="large-12 columns">
          <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
            <div class="row">
              <h5 class="text-center">
                <%= t('.sign_up', :default => "Sign up") %>
              </h5>
            </div>
            <div class="row">
              <%= f.input :first_name, class: "large-12 columns", placeholder: "First Name" %>
            </div>
            <div class="row">
              <%= f.input :last_name, class: "large-12 columns", placeholder: "Last Name" %>
            </div>
            <div class="row">
              <%= f.input :email, autofocus: true, class: "large-12 columns", placeholder: "Email"%>
            </div>
            <div class="row">
              <%= f.input :password, autocomplete: "off", class: "large-12 columns", placeholder: "Password"%>
              <%= f.hint 'Password must be atleast 8 charactes long!' %>
            </div>
            <div class="row">
            <%= f.input :password_confirmation, autocomplete: "off", class: "large-12 columns", placeholder: "Password Confirmation"%>
            </div>
            <div class="row">
              <%= f.submit t('.sign_up', :default => "Sign up"), class: "button expand large-12 large-centered columns" %>
            </div>
          <% end %>
        </div>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>